


@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_LOGIN_INICIO.cshtml";
}



<section class="" style="position: relative; background-color: #000000;">
    <img id="img" src="~/imagenes/imagen_universidad_esan.jpg" width="100%" />
    <div class="container py-5 h-100 position-absolute top-50 start-50 translate-middle">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <div class="alert alert-danger" id="mensajeid" style="display: none;">
                                    <!-- Aquí se mostrará el mensaje de error -->
                                </div>

                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }

                                @*llama un metodo paRA VALIDACION*@
                                <form class="needs-validation" action="@Url.Action("ValidarUsuario","Home")" novalidate>

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0 text-danger">ESAN</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresar a la plataforma Administrativa</h5>

                                    <div class="form-outline mb-4 ">
                                        <label class="form-label" for="user">Usuario</label><br />
                                        <input type="text" id="user" class="form-control form-control-lg" placeholder="ingrese su usuario" name="user" required />
                                        <div class="valid-feedback">Validado.</div>
                                        <div class="invalid-feedback">Ingrese un correo valido</div>

                                    </div>

                                    <div class="form-outline mb-4 ">
                                        <label class="form-label" for="pass">Password</label>
                                        <input type="password" name="pass" id="pass" class="form-control form-control-lg" placeholder="ingrese su contraseña" required />
                                        <div class="valid-feedback">Validado.</div>
                                        <div class="invalid-feedback">Es obligatorio</div>
                                    </div>

                                    <div class="form-check mb-3 ">
                                        <input class="form-check-input" type="checkbox" id="myCheck" name="remember" required>
                                        <label class="form-check-reverse" for="myCheck">Autorizo mis datos personales</label>
                                        <div class="valid-feedback">Validado.</div>
                                        <div class="invalid-feedback">Es obligatorio</div>

                                    </div>

                                    <div class="pt-1 mb-4">
                                        @*<a class="btn btn-dark btn-lg btn-block" href="#">Login</a>*@
                                        <button type="submit" class="btn btn-dark btn-lg btn-block">Ingresar</button>
                                    </div>


                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

